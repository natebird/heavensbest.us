<%= title "Reset Your Password", :h2 %>

<div class="grid_8 prefix_4 suffix_4">
	<br /><br /><br /><br />
	<div id="grid8-top"></div>
	<div id="grid8-middle">
		<%= form_for :user, :url => { :controller => "passwords", :action => 'update_after_forgetting' } do |f| %>
		  <%= f.error_messages %>
		  <p>Please enter a new password and confirm it.</p>
			<fieldset>
				<legend>Update Password</legend>
				<ol>
					<li>
				    <%= f.label :password %>
				    <%= f.password_field :password %>
					</li>
					<li>
				    <%= f.label :password_confirmation %>
				    <%= f.password_field :password_confirmation %>
					</li>
				</ol>
			</fieldset>
			<%= hidden_field_tag :reset_code, params[:reset_code] %>
			<div class="buttons">
		    <%= f.submit "Submit" %>
			</div>
		<% end %>
	</div>
	<div id="grid8-bottom"></div>
	<br /><br /><br /><br />
</div>