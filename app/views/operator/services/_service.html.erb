<%= form_for([:operator, @account, @service]) do |f| %>

<div class="grid_4">

	<%= f.hidden_field :account_id, :value => current_account.id %>&nbsp;

	<%= f.label :title, "Sidebar name" %>
	<%= f.text_field :title, :size => 24 %>&nbsp;

	<%= f.label :photo_id, "Choose an image" %>
	<%= f.collection_select :photo_id, Photo.all, :id, :name %><br /><br />
	
	<%= f.select(:active, { "Not Published" => false, "Published" => true } ) %>
	
	<br /><br />
    
	<%= link_to(image_tag("/images/buttons/delete.png", :class => 'button' ), 
		[:operator, @account, @service], :confirm => 'Are you sure?', :method => :delete) %>

	<%= link_to(image_tag("/images/buttons/cancel.png", :class => 'button' ), 
		operator_account_services_path(@account) ) %>
		
	<%= image_submit_tag("/images/buttons/save.png", :class => 'button' ) %>
</div>

<div class="grid_7">
	
	<%= f.label :body %>
	<%= f.text_area :body, :rows => 10, :style => "width: 500px" %>
</div>

<% end %>
