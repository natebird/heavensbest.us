
<div class="grid_7 indent-10">
  <%= form_for([:operator, @account, @testimonial]) do |f| %>
	
	<%= f.hidden_field :account_id, :value => current_account.id %>

		<%= f.label :quote, {}, :class=> "twohundred" %>
		<%= f.text_area :quote, :cols => 41, :rows => 10 %>
		
		<%= f.label :name, {}, :class=> "twohundred" %>
		<%= f.text_field :name, :size => 20 %><br/>

		<%= f.label :location, {}, :class=> "twohundred" %>
		<%= f.text_field :location, :size => 21 %>
	  
	<div class="clear"></div>
	<br />
			<div class="up10">
			  <% if @testimonial.new_record? %>
	        <%= f.select(:active, { "Published" => true, "Not Published" => false }, :selected => true ) %>
			  <% else %>
		      <%= f.select(:active, { "Published" => true, "Not Published" => false } ) %>
			  <% end %>
		  </div>
		  
			<%= link_to(image_tag("/images/buttons/delete.png", :class => 'button' ), 
			[:operator, @account, @testimonial], :confirm => 'Are you sure?', :method => :delete) %>
			<%= link_to(image_tag("/images/buttons/cancel.png", :class => 'button' ), 
			operator_account_testimonials_path(@account) ) %>
			<%= image_submit_tag("/images/buttons/save.png", :class => 'button' ) %>
  <% end %>
</div>
