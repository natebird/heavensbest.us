
<div class="grid_7">
  <% form_for([:operator, @account, @testimonial]) do |f| %>
	
	<%= f.hidden_field :account_id, :value => current_account.id %>

		<%= f.label :quote, {}, :class=> "twohundred" %>
		<%= f.text_area :quote, :cols => 37, :rows => 10 %>
		
		<%= f.label :name, {}, :class=> "twohundred" %>
		<%= f.label :location, {}, :class=> "twohundred" %>
		
		<%= f.text_field :name, :size => 18 %>&nbsp;
		<%= f.text_field :location, :size => 19 %>
	  
	<div class="clear"></div>
	<br />
	    <span class="twohundred">
		    <span class="onehundred">
			<%= link_to(image_tag("/images/buttons/delete.png", :class => 'button' ), 
			[:operator, @account, @testimonial], :confirm => 'Are you sure?', :method => :delete) %></span>
		    <span class="onehundred"><%= f.check_box :active %> <%= f.label :active, "Published" %></span>
		</span>
		
		<span class="twohundred">
		<span class="onehundred">
			<%= link_to(image_tag("/images/buttons/cancel.png", :class => 'button' ), 
			operator_account_testimonials_path(@account) ) %></span>
		<span class="onehundred">
			<%= image_submit_tag("/images/buttons/save.png", :class => 'button right' ) %></span></span>
  <% end %>
</div>
<%= error_messages_for :testimonial %>