<div class="operator">
	<%= f.label :name, "Operator name" %>
	<%= f.text_field :name %>
	<span class="hint">The name of the operator for this area. This name will be displayed prominently on every page of your site.<span class="pointer">&nbsp;</span></span>

	<%= f.label :title, "Operator title" %>
	<%= f.text_field :title %>
	<span class="hint">This is the title of the operator. Generally this is "Operator" or "Owner". This title will be displayed prominently on every page of your site.<span class="pointer">&nbsp;</span></span>
	<% f.remove_link(image_tag("/images/buttons/remove.gif")) %>
</div>
