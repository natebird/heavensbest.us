<div class="grid_11">
	<div id="grid12-top">&nbsp;</div>

	<div id="grid12-middle">
		<h1 class="indent20"><%= @page_title = 'Area Settings' %></h1>

		<fieldset class="indent10"><legend>Basic Information</legend>
			<% form_for @account, :url => { :action => 'update' }, :html => { :method => :put } do |f| %>
				<%= f.error_messages %>	
				<% f.label :plan_id, 'Plan' %>
				<% select_tag :plan_id, options_from_collection_for_select(SubscriptionPlan.find(:all), :id, :name ) %>
				<%= render :partial => 'fields', :locals => {:f => f} %>
		</fieldset>
		  	<span class="prefix_5 grid_2"><%= image_submit_tag("/images/buttons/save.png", :class => 'button right' ) %></span>
			<% end %>
		<div class="clear"></div>
	</div>

	<div id="grid12-bottom">&nbsp;</div>
	
</div>

<%= render :partial => @account %>