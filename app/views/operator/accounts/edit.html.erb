<div class="grid_16">
	<div id="grid16-top">&nbsp;</div>

	<div id="grid16-middle">
		<h1 class="indent20"><%= @page_title = 'Area Settings' %></h1>

		<%= form_for([:operator, @account]) do |f| %>
			<fieldset class="indent10"><legend>Area Information</legend>
				<%= render :partial => 'fields', :locals => {:f => f} %>
			</fieldset>		

			<fieldset class="indent10"><legend>Search Information</legend>
				<%= render :partial => 'search', :locals => {:f => f} %>
			</fieldset>		

			<span class="prefix_2 grid_5">
				<%= label_tag "" %>
				<%= image_submit_tag("/images/buttons/save.gif", :class => 'button' ) %>
			</span>

		<% end %>
		<div class="clear"></div>
	</div>

	<div id="grid16-bottom">&nbsp;</div>
	
</div>
