<div class="grid_5">
<% form_for([:operator, @account, @special]) do |f| %>
<%= f.error_messages %>

	<%= f.hidden_field :account_id, :value => current_account.id %>
	
	<%= f.label :title %><br />
	<%= f.text_field :title, :style => "width:100%" %><br />

	<%= f.label :start, "Start Date" %><br />
	<%= f.date_select :start, :order => [:day, :month, :year] %><br />
	
	<%= f.label :end, "End Date" %><br />
	<%= f.date_select :end, :order => [:day, :month, :year] %><br />

	<%= f.label :phone, "Phone Number" %><br />
	<%= f.text_field :phone, :style => "width:100%" %><br />

	<%= f.label :body, "Text" %><br />	
	<%= f.text_area :body, :rows => 7, :style => "width:100%" %><br />
	
	<div>
	<%= link_to(image_tag("/images/buttons/delete.png", :class => 'button' ), [:operator, @account, @special],
		:confirm => 'Are you sure?', :method => :delete) %>
	
	<%= link_to(image_tag("/images/buttons/cancel.png", :class => 'button' ), operator_account_specials_path(@account) ) %>
	<%= image_submit_tag("/images/buttons/save.png", :class => 'button' ) %></div>
<% end %>
</div>