= title "Operator Login"

.grid_8.prefix_4.suffix_4
  #grid8-top
  #grid8-middle
    - if !current_user
      %fieldset#login_box
        - form_for @user_session, :url => user_session_path do |f|
          = f.error_messages
          = f.label :login
          = f.text_field :login
          %br
          %br
          = f.label :password
          = f.password_field :password
          %br
          %br
          = f.check_box :remember_me
          = f.label :remember_me
          %br
          %br
          = f.submit "Login"
    - else
      %p.center 
        You are logged in as 
        = current_user.name + ". Would you like to"
        = link_to "logout?", logout_path
  #grid8-bottom