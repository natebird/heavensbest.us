<h1>Editing tip</h1>

<%= error_messages_for :tip %>

<% form_for [:admin, @tip] do |f| %>
  <p><b>Title</b><br />
    <%= f.text_field :title %></p>

  <p><b>Body</b><br />
    <%= f.text_area :body %></p>

  <p><%= f.submit "Update" %></p>

<% end %>

<%= link_to 'Show', [:admin, @tip] %> |
<%= link_to 'Back', :back %>
