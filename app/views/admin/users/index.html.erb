<h1><%= @page_title = 'Active Users' %></h1>

<table id="users">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= link_to user.name, edit_admin_user_path(user) %></td>
      <td><%=h user.email %></td>
      <td><%= link_to "Areas (#{user.accounts.count})", edit_admin_user_path(user) %>&nbsp;|&nbsp;</td>
	  <td><%= link_to 'Remove', [:admin, user], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to('Add a new user', new_admin_user_url) %>
