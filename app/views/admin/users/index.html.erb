<h1><%= @page_title = 'Users' %></h1>
<%= link_to('Add a new user', new_operator_user_url) %>

<table id="users">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
  <% current_user.each do |user| %>
    <tr>
      <td><%=h user.name %></td>
      <td><%=h user.email %></td>
      <td><%= link_to('Edit', edit_operator_user_path(user)) %></td>
    </tr>
  <% end %>
</table>