<% title "Pages" %>

<h1>Pages</h1>


<table>
  <% for page in @pages %>
    <tr>
      <td><%= page.name %> &nbsp;</td>
      <td><%= link_to "View", [:admin, page] %> &nbsp;</td>
      <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
    </tr>
  <% end %>
</table>

<br />
<p><%= link_to "New Page", new_admin_page_path %></p>
