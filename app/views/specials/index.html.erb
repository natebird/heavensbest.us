<% title "Coupons and Specials" %>

<div id="welcome"><h1>Even the Best offer Specials</h1></div>

<div id="homepage">
	<% if @specials.empty? %>
	<div class="grid_8 prefix_4 suffix_4">
		<br /><br /><br /><br />

		<div id="grid8-top"></div>
		<div id="grid8-middle">
			<p class="center"> There are currently no specials running. Please check back later.</p>
		</div>
		<div id="grid8-bottom"></div>
		<br /><br /><br /><br />
	</div>
	<% else %>
		<% for special in @specials %>
		<%= render :partial => special %>	
		<% end %>
	<% end %>
</div>

<div class="clear"></div>

<div id="cards">
	<%= render :partial => "shared/cards" %>
</div>