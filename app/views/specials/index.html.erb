
<div id="welcome">Even the Best offer Specials</div>

<div id="content">
	<% for special in @specials %>
		<div class="grid_6 blur">
			<div class="special">
				<div class="print"><%= link_to "Printable coupon", special_path(params[:region], params[:account], special), 
							:popup => [special.title, 'height=300,width=600'] %></div>
				<div class="logo">&nbsp;</div>

				<div class="content">
					<div class="title"><%= special.title %></div>
					<p><%= textilize (special.body) %></p>
					<div class="phone"><%= number_to_phone(special.phone) %></div>
				</div>

				<div class="footer">
						<span style="float:left">www.heavensbest.us</span>
						<span style="float:right">Expires <%= special.end.to_s(:long) %></span>
				</div>
			</div>
		</div>
	<% end %>
</div>

