<% title "Coupons and Specials" %>

<div id="welcome"><h1>Even the Best offer Specials</h1></div>

<div id="homepage">
	<% if @specials.empty? %>
	<div class="grid_8 prefix_4 suffix_4">
		<br /><br /><br /><br />

		<div id="grid8-top"></div>
		<div id="grid8-middle">
			<p class="center"> There are currently no specials running. Please check back later.</p>
		</div>
		<div id="grid8-bottom"></div>
		<br /><br /><br /><br />
	</div>
	<% else %>
		<% for special in @specials %>
			<div class="grid_6 prefix_1">
				<div class="special">

					<div class="text">
					  <div class="title"><%= special.title %></div>
					  <%= textilize (special.body) %>
					  <div class="phone"><%= number_to_phone(special.phone) %></div>
					</div>

					<div class="footer">
					  <span style="float:left">www.heavensbest.us</span>
					  <span style="float:right">Expires <%= special.end.to_s(:long) %></span>
					</div>
				</div>
				<br /><br />
			</div>
		<% end %>
	<% end %>
</div>

<div class="clear"></div>

<div id="cards">
	<%= render :partial => "shared/cards" %>
</div>