
<div id="welcome">Even the Best offer Specials</div>

<div id="homepage">
	<% if @specials.empty? %>
		There are currently no specials running. Check back later.
	<% else %>
		<% for special in @specials %>
			<div class="grid_7 prefix_1">
				<div class="special">
					<div class="print"><%= link_to "Printable coupon", special_path(params[:region], 
						params[:accountlink], special), :popup => [special.title, 'height=300,width=600'] %></div>
					<div class="logo">&nbsp;</div>

					<div class="content">
						<div class="title"><%= special.title %></div>
						<p><%= simple_format (special.body) %></p>
						<div class="phone"><%= number_to_phone(special.phone) %></div>
					</div>

					<div class="footer">
							<span style="float:left">www.heavensbest.us</span>
							<span style="float:right">Expires <%= special.end.to_s(:long) %></span>
					</div>
				</div>
			</div>
		<% end %>
	<% end %>
</div>

<div id="cards">
	<%= render :partial => "shared/cards" %>
</div>

